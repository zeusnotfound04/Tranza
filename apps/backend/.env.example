# =============================================================================
# TRANZA BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port where the server will run (default: 8080)
PORT=8080

# Gin mode: debug, release, test
GIN_MODE=debug

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=tranza_db
DB_PORT=5432
DB_SSL=disable

# Example connection string format:
# postgresql://username:password@localhost:5432/tranza_db?sslmode=disable

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Secret key for JWT tokens - use a strong, random string
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# =============================================================================
# RAZORPAY PAYMENT GATEWAY
# =============================================================================
# Get these from your Razorpay Dashboard
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Environment: test or live
RAZORPAY_ENV=test

# =============================================================================
# AI SERVICES (GEMINI)
# =============================================================================
# Google Gemini API key for AI-powered payment processing
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# EMAIL SERVICE (SMTP)
# =============================================================================
# SMTP configuration for email verification and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_SSL=false

# From email details
FROM_EMAIL=noreply@tranza.com
FROM_NAME=Tranza

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/oauth/google/callback

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URL=http://localhost:8080/auth/oauth/github/callback

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
# Additional security keys (if needed)
ENCRYPTION_KEY=your_encryption_key_here
API_KEY_SECRET=your_api_key_secret

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================
# Redis (if using for caching/sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# File storage (AWS S3, etc.)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# Monitoring & Logging
# SENTRY_DSN=
# LOG_LEVEL=info

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug logs and development features
DEBUG=true
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h

# Security
BCRYPT_COST=12
SESSION_TIMEOUT=24h
