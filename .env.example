# =============================================================================
# TRANZA MONOREPO ENVIRONMENT CONFIGURATION
# =============================================================================
# This is the root-level environment configuration for the entire Tranza project
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# PROJECT INFORMATION
# =============================================================================
PROJECT_NAME=Tranza
PROJECT_VERSION=1.0.0
ENVIRONMENT=development

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker Compose environment variables
COMPOSE_PROJECT_NAME=tranza

# Database container configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=tranza_db
POSTGRES_USER=tranza_user
POSTGRES_PASSWORD=secure_password_123

# Backend container configuration
BACKEND_PORT=8080
BACKEND_HOST=localhost

# Frontend container configuration
FRONTEND_PORT=3000
FRONTEND_HOST=localhost

# Documentation container configuration
DOCS_PORT=3001

# =============================================================================
# SHARED CONFIGURATION
# =============================================================================
# JWT Secret (shared between services)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Encryption keys
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
RAZORPAY_ENV=test

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@tranza.com
FROM_NAME=Tranza

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable debug mode across all services
DEBUG=true
LOG_LEVEL=debug

# Development URLs
BACKEND_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
DOCS_URL=http://localhost:3001

# =============================================================================
# OPTIONAL: PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify these for production deployment

# Production Database
# POSTGRES_HOST=your-production-db-host
# POSTGRES_PORT=5432
# POSTGRES_DB=tranza_prod
# POSTGRES_USER=tranza_prod_user
# POSTGRES_PASSWORD=super_secure_production_password

# Production URLs
# BACKEND_URL=https://api.tranza.com
# FRONTEND_URL=https://tranza.com
# DOCS_URL=https://docs.tranza.com

# Production Razorpay
# RAZORPAY_ENV=live
# RAZORPAY_KEY_ID=rzp_live_your_live_key_id
